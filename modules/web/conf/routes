# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                           controllers.AuthenticationController.login
GET         /dashboard                  controllers.HomeController.dashboard

GET         /person/profile             controllers.PersonController.profile

GET         /login                      controllers.AuthenticationController.login
GET         /logout                     controllers.AuthenticationController.logout

# Map static resources from the /public folder to the /assets URL path
#GET         /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)

GET         /public/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET         /lib/*file                  controllers.Assets.versioned(path="/public/lib", file: Asset)
GET         /css/*file                  controllers.Assets.versioned(path="/public/stylesheets", file: Asset)
GET         /js/*file                   controllers.Assets.versioned(path="/public/javascripts", file: Asset)
GET         /img/*file                  controllers.Assets.versioned(path="/public/images", file: Asset)

GET         /pages/*file                controllers.Assets.versioned(path="/public/pages", file: Asset)
GET         /vendor/*file               controllers.Assets.versioned(path="/public/vendor", file: Asset)
